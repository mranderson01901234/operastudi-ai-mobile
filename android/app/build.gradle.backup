plugins {
    id "com.android.application"
    id "kotlin-android"
    // The Flutter Gradle Plugin must be applied after the Android and Kotlin Gradle plugins.
    id "dev.flutter.flutter-gradle-plugin"
}

android {
    namespace = "com.selfieeditor.selfie_editor"
    compileSdk = 35
    ndkVersion = "25.1.8937393"

    compileOptions {
        sourceCompatibility = JavaVersion.VERSION_1_8
        targetCompatibility = JavaVersion.VERSION_1_8
    }

    kotlinOptions {
        jvmTarget = JavaVersion.VERSION_1_8
    }

    defaultConfig {
        applicationId = "com.selfieeditor.selfie_editor"
        minSdk = 23  // Optimized for modern Android emulators
        targetSdk = 35
        versionCode = 1
        versionName = "1.0.0"
        
        // Optimize for emulator performance
        multiDexEnabled = true
        
        // Add test instrumentation runner for debugging
        testInstrumentationRunner = "androidx.test.runner.AndroidJUnitRunner"
    }

    buildTypes {
        debug {
            debuggable = true
            minifyEnabled = false
            shrinkResources = false
            // Optimize for development speed
            crunchPngs = false
        }
        release {
            // TODO: Add your own signing config for the release build.
            // Signing with the debug keys for now, so `flutter run --release` works.
            signingConfig = signingConfigs.debug
            minifyEnabled = true
            shrinkResources = true
        }
    }
    
    // Optimize build performance for emulator development
    dexOptions {
        javaMaxHeapSize = "4g"
    }
    
    // Enable view binding for better development experience
    buildFeatures {
        viewBinding = false
    }
}

flutter {
    source = "../.."
}

dependencies {
    // Add multidex support for emulator compatibility
    implementation 'androidx.multidex:multidex:2.0.1'
    
    // Add debugging tools for development
    debugImplementation 'com.squareup.leakcanary:leakcanary-android:2.12'
}
